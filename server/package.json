{
    "name": "smartstick-cloud-backend",
    "version": "1.0.0",
    "description": "Cloud backend for Smart Stick mobility device",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "docker:build": "docker build -t smartstick-api .",
        "docker:run": "docker run -p 7284:7284 smartstick-api"
    },
    "keywords": [
        "smartstick",
        "iot",
        "mqtt",
        "mongodb",
        "express",
        "nodejs"
    ],
    "author": "Smart Stick Team",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^7.5.0",
        "mqtt": "^5.0.3",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "express-rate-limit": "^6.10.0",
        "express-validator": "^7.0.1",
        "firebase-admin": "^11.10.1",
        "dotenv": "^16.3.1",
        "morgan": "^1.10.0",
        "compression": "^1.7.4"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.7.0",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "**/*.js",
            "!node_modules/**",
            "!coverage/**",
            "!jest.config.js"
        ]
    },
    "engines": {
        "node": ">=18.0.0"
    }
}